# Configuration template for Bitfinex API credentials
# Copy this file to .env and fill in your actual credentials

# Bitfinex API Credentials
BFX_API_KEY=your_api_key_here
BFX_API_SECRET=your_api_secret_here

# Optional: Bitfinex API hosts (defaults are usually fine)
# BFX_REST_HOST=https://api.bitfinex.com
# BFX_WSS_HOST=wss://api.bitfinex.com/ws/2

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Trading Configuration (for examples)
# Default trading pair
DEFAULT_SYMBOL=tBTCUSD

# Default order size for examples
DEFAULT_ORDER_SIZE=0.001

# Default spread for market making (as decimal, e.g., 0.01 = 1%)
DEFAULT_SPREAD=0.01
